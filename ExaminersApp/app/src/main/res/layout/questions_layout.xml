<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/question_tv_in_questionLayout"
        style="@style/txt_Size_in_camera_preview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <RadioGroup
        android:id="@+id/radio_group_inquestionLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question_tv_in_questionLayout">


        <RadioButton
            android:id="@+id/radio_btn0"
            style="@style/radio_btn_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/radio_btn1"
            style="@style/radio_btn_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/radio_btn2"
            style="@style/radio_btn_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/radio_btn3"
            style="@style/radio_btn_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/radio_btn4"
            style="@style/radio_btn_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RadioGroup>

    <TextView
        android:id="@+id/textView3"
        style="@style/txt_Size_in_camera_preview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        app:layout_constraintEnd_toEndOf="@+id/radio_group_inquestionLayout"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="@+id/radio_group_inquestionLayout"
        app:layout_constraintTop_toBottomOf="@+id/radio_group_inquestionLayout" />

    <TextView
        android:id="@+id/textView5"
        style="@style/txt_Size_in_camera_preview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        app:layout_constraintEnd_toEndOf="@+id/radio_group_inquestionLayout"
        app:layout_constraintHorizontal_bias="0.27"
        app:layout_constraintStart_toStartOf="@+id/radio_group_inquestionLayout"
        app:layout_constraintTop_toBottomOf="@+id/radio_group_inquestionLayout" />

    <TextView
        android:id="@+id/textView6"
        style="@style/txt_Size_in_camera_preview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        app:layout_constraintEnd_toEndOf="@+id/radio_group_inquestionLayout"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="@+id/radio_group_inquestionLayout"
        app:layout_constraintTop_toBottomOf="@+id/radio_group_inquestionLayout" />

    <TextView
        android:id="@+id/textView7"
        style="@style/txt_Size_in_camera_preview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        app:layout_constraintEnd_toEndOf="@+id/radio_group_inquestionLayout"
        app:layout_constraintHorizontal_bias="0.68"
        app:layout_constraintStart_toStartOf="@+id/radio_group_inquestionLayout"
        app:layout_constraintTop_toTopOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView8"
        style="@style/txt_Size_in_camera_preview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        app:layout_constraintEnd_toEndOf="@+id/radio_group_inquestionLayout"
        app:layout_constraintHorizontal_bias="0.88"
        app:layout_constraintStart_toStartOf="@+id/radio_group_inquestionLayout"
        app:layout_constraintTop_toTopOf="@+id/textView6" />

</androidx.constraintlayout.widget.ConstraintLayout>